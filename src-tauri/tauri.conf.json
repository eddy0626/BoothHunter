{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "BoothHunter",
  "version": "0.3.1",
  "identifier": "com.boothhunter.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev:frontend",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "BoothHunter - Booth.pm 검색",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https://booth.pximg.net https://*.booth.pm https://*.pximg.net data:; style-src 'self' 'unsafe-inline'; connect-src 'self' https://booth.pm https://*.booth.pm https://lingva.ml https://lingva.lunar.icu https://translate.plausibility.cloud ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "shortDescription": "Search and manage VRChat items from Booth.pm",
    "category": "Utility",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [],
        "section": "utility",
        "priority": "optional"
      },
      "rpm": {
        "depends": [],
        "release": "1"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE2M0Y0NEYwODFCRDFEODUKUldTRkhiMkI4RVEvRnFzSmZBc2Z0SzV2WlhrcVY3Q3RRNkVxRnlBREZnblpHTWJvUUEzOHBiWE8K",
      "endpoints": ["https://github.com/eddy0626/BoothHunter/releases/latest/download/latest.json"],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
